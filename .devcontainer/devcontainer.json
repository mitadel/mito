// .devcontainer/devcontainer.json
{
    "name": "mito",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "mounts": [
        "source=${localWorkspaceFolder},target=/home/user/mito,type=bind"
    ],
    "extensions": [
        "ms-vscode.cpptools-extension-pack",
        "eamodio.gitlens",
        "med-h.git-graph-revamped",
    ],
    "remoteUser": "user"
}