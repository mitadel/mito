{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "cmake release",
            "command": "cmake",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "args": [
                "-DCMAKE_BUILD_TYPE=Release",
                "-DCMAKE_INSTALL_PREFIX=/usr/local/mito",
                "-DMITO_BUILD_TESTING=ON",
                ".."
            ]
        },
        {
            "type": "shell",
            "label": "build release",
            "command": "make",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "args": [
                "-j",
                "4"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "cmake release"
            ]
        },
        {
            "type": "shell",
            "label": "run tests release",
            "command": "make",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "args": [
                "test"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "dependsOn": [
                "cmake release",
                "make release"
            ],
            "dependsOrder": "sequence"
        }
    ]
}