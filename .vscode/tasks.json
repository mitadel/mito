{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "g++",
            "args": [
                "-g",
                "-std=c++2a",
                "-I${env:PYRE_DIR}/include",
                "-lpyre",
                "-ljournal",
                "-L${env:PYRE_DIR}/lib",
                "-Wall",
                "-Wextra",
                "-pedantic",
                "-Werror",
                "-Wno-unused-variable",
                "-Wno-unused-parameter",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "cppbuild",
            "label": "C/C++: clang++ build active file",
            "command": "clang++",
            "args": [
                "-g",
                "-std=c++2a",
                "-stdlib=libc++",
                "-nostdinc++",
                "-I/opt/local/include/gcc/c++",
                "-I/opt/local/include/gcc/c++/x86_64-apple-darwin20",
                "/opt/local/lib/libstdc++.6.dylib",
                "-I${env:PYRE_DIR}/include",
                "-lpyre",
                "-ljournal",
                "-L${env:PYRE_DIR}/lib",
                "-Wl,-rpath ${env:PYRE_DIR}/lib", 
                "-Wall",
                "-Wextra",
                "-pedantic",
                "-Werror",
                "-Wno-unused-variable",
                "-Wno-unused-parameter",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "cppbuild",
            "label": "C/C++: clang++ (GCC stdlib) build active file",
            "command": "clang++",
            "args": [
                "-g",
                "-std=c++2a",
                "-stdlib=libc++",
                // the following four lines point clang to the gcc standard library
                "-nostdinc++",
                "-I/opt/local/include/gcc/c++", // TOFIX: directories not general across OS
                "-I/opt/local/include/gcc/c++/x86_64-apple-darwin20",
                "/opt/local/lib/libstdc++.6.dylib",
                "-I${env:PYRE_DIR}/include",
                "-lpyre",
                "-ljournal",
                "-L${env:PYRE_DIR}/lib",
                "-Wl,-rpath ${env:PYRE_DIR}/lib",
                "-Wall",
                "-Wextra",
                "-pedantic",
                "-Werror",
                "-Wno-unused-variable",
                "-Wno-unused-parameter",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "Run all tests",
            "command": "python3 scripts/run_tests.py",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        }
    ]
}