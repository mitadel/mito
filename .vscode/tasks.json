{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "g++ build active file",
            "command": "g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-std=c++20",
                "-isystem",
                "${env:PYRE_DIR}/include",
                "-isystem",
                "${env:GTEST_DIR}/include",
                "-I${workspaceRoot}/lib",
                "-lpyre",
                "-ljournal",
                "-L${env:PYRE_DIR}/lib",
                "-lgtest",
                "-lgtest_main",
                "-L${env:GTEST_DIR}/lib",
                "-Wl,-rpath",
                "${env:PYRE_DIR}/lib",
                "-Wall",
                "-Wextra",
                "-pedantic",
                "-Werror",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build"
            }
        },
        {
            "type": "shell",
            "label": "Cmake Release",
            "command": "cmake",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "args": [
                "-DCMAKE_BUILD_TYPE=RelWithDebInfo",
                "-DCMAKE_INSTALL_PREFIX=/usr/local/mito",
                "-DMITO_BUILD_TESTING=ON",
                ".."
            ]
        },
        {
            "type": "shell",
            "label": "Make",
            "command": "make",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "args": [
                "-j",
                "4"
            ],
            "group": {
                "kind": "build"
            }
        },
        {
            "type": "shell",
            "label": "Run Tests",
            "command": "make",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "args": [
                "test"
            ],
            "group": {
                "kind": "test"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "Build Release",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "Cmake Release",
                "Make"
            ],
            "dependsOrder": "sequence"
        },
        {
            "label": "Run Tests Release",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "dependsOn": [
                "Build Release",
                "Run Tests"
            ],
            "dependsOrder": "sequence"
        }
    ]
}